{
  "name": "shopware/project",
  "description": "Shopware 6 project",
  "license": "proprietary",
  "type": "project",
  "require": {
    "composer-runtime-api": "^2.0",
    "shopware/administration": "^6.7",
    "shopware/core": "^6.7",
    "shopware/elasticsearch": "^6.7",
    "shopware/storefront": "^6.7",
    "symfony/flex": "~2",
    "symfony/security-csrf": "^7.3"
  },
  "repositories": [
    {
      "type": "path",
      "url": "custom/plugins/*",
      "options": {
        "symlink": true
      }
    },
    {
      "type": "path",
      "url": "custom/plugins/*/packages/*",
      "options": {
        "symlink": true
      }
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "symfony/flex": true,
      "symfony/runtime": true
    },
    "optimize-autoloader": true,
    "sort-packages": true
  },
  
  "scripts": {
    "auto-scripts": {
      "assets:install": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "endpoint": [
        "https://raw.githubusercontent.com/shopware/recipes/flex/main/index.json",
        "flex://defaults"
      ]
    }
  },
  "require-dev": {
    "symfony/phpunit-bridge": "^7.3"
  }
}
