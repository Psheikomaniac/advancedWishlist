{
    "name": "advanced-wishlist/advanced-wishlist",
    "description": "The most advanced wishlist system for Shopware 6 with PHP 8.4 property hooks, enterprise security, lazy loading, and professional analytics. Perfect for e-commerce stores requiring premium wishlist functionality.",
    "type": "shopware-platform-plugin",
    "version": "2.0.0",
    "license": "MIT",
    "keywords": [
        "shopware",
        "shopware6",
        "wishlist",
        "ecommerce",
        "php8.4",
        "property-hooks",
        "enterprise",
        "analytics",
        "performance",
        "lazy-loading",
        "rate-limiting",
        "cqrs",
        "premium"
    ],
    "homepage": "https://github.com/psheikomaniac/advanced-wishlist",
    "readme": "README.md",
    "authors": [
        {
            "name": "Heiko Rademacher",
            "email": "info@software-rademacher.de",
            "homepage": "https://software-rademacher.de",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support@software-rademacher.de",
        "issues": "https://github.com/psheikomaniac/advanced-wishlist/issues",
        "docs": "https://docs.psheikomaniac/advanced-wishlist",
        "source": "https://github.com/psheikomaniac/advanced-wishlist"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/psheikomaniac"
        },
        {
            "type": "patreon",
            "url": "https://patreon.com/advanced-wishlist"
        }
    ],
    "require": {
        "php": "^8.3",
        "shopware/core": "^6.7.0",
        "shopware/administration": "^6.7.0",
        "shopware/storefront": "^6.7.0",
        "shopware/elasticsearch": "^6.7.0",
        "symfony/framework-bundle": "~7.2.0",
        "symfony/validator": "~7.2.0",
        "symfony/rate-limiter": "~7.2.0",
        "symfony/cache": "~7.2.0",
        "doctrine/orm": "^3.0",
        "psr/cache": "^3.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.12",
        "symfony/phpunit-bridge": "~7.2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "rector/rector": "^1.0"
    },
    "suggest": {
        "shopware/commercial": "For advanced B2B features and enterprise functionality",
        "elasticsearch/elasticsearch": "For enhanced search capabilities in large product catalogs",
        "predis/predis": "For Redis caching support and improved performance",
        "monolog/monolog": "For advanced logging and debugging capabilities"
    },
    "extra": {
        "shopware-plugin-class": "AdvancedWishlist\\AdvancedWishlist",
        "plugin-icon": "src/Resources/config/plugin.png",
        "description": {
            "de-DE": "Das fortschrittlichste Wunschlisten-System f√ºr Shopware 6",
            "en-GB": "The most advanced wishlist system for Shopware 6"
        },
        "label": {
            "de-DE": "Erweitertes Wunschlisten-System",
            "en-GB": "Advanced Wishlist System"
        },
        "copyright": "(c) 2025 Advanced Wishlist",
        "manufacturerLink": {
            "de-DE": "https://software-rademacher.de",
            "en-GB": "https://software-rademacher.de"
        },
        "supportLink": {
            "de-DE": "https://docs.software-rademacher.de/advanced-wishlist",
            "en-GB": "https://docs.software-rademacher.de/advanced-wishlist"
        }
    },
    "autoload": {
        "psr-4": {
            "AdvancedWishlist\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdvancedWishlist\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-fix": "php-cs-fixer fix --diff --verbose",
        "cs-check": "php-cs-fixer fix --dry-run --diff --verbose",
        "stan": "phpstan analyse",
        "rector": "rector process --dry-run",
        "rector-fix": "rector process",
        "ci": [
            "@cs-check",
            "@stan",
            "@test"
        ],
        "post-install-cmd": [
            "echo 'Advanced Wishlist Plugin installed successfully!'"
        ],
        "post-update-cmd": [
            "echo 'Advanced Wishlist Plugin updated successfully!'"
        ]
    },
    "scripts-descriptions": {
        "test": "Run the test suite",
        "test-coverage": "Run tests with coverage report",
        "cs-fix": "Fix coding standards issues",
        "cs-check": "Check coding standards",
        "stan": "Run static analysis with PHPStan",
        "rector": "Check for code modernization opportunities",
        "rector-fix": "Apply code modernization",
        "ci": "Run continuous integration checks"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "composer/installers": true,
            "symfony/runtime": true
        },
        "platform": {
            "php": "8.4"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
