<?xml version="1.0" encoding="UTF-8"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/shopware/trunk/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>Minimal configuration</title>

        <input-field type="text">
            <name>textField</name>
            <label>Test field with default value</label>
            <defaultValue>test</defaultValue>
        </input-field>
    </card>

    <card>
        <title>Performance Settings</title>

        <component name="sw-single-select">
            <name>cdnStrategy</name>
            <label>CDN Strategy</label>
            <placeholder>Select CDN strategy</placeholder>
            <helpText>Choose which CDN strategy to use for static assets</helpText>
            <defaultValue>none</defaultValue>
            <options>
                <option>
                    <id>none</id>
                    <name>No CDN (Default)</name>
                </option>
                <option>
                    <id>cloudfront</id>
                    <name>Amazon CloudFront</name>
                </option>
                <option>
                    <id>cloudflare</id>
                    <name>Cloudflare</name>
                </option>
                <option>
                    <id>custom</id>
                    <name>Custom CDN</name>
                </option>
            </options>
        </component>

        <input-field type="text">
            <name>cdnUrl</name>
            <label>CDN URL</label>
            <placeholder>https://your-cdn-domain.com</placeholder>
            <helpText>The base URL of your CDN (e.g., https://d111111abcdef8.cloudfront.net)</helpText>
            <defaultValue></defaultValue>
        </input-field>

        <input-field type="bool">
            <name>cdnEnabled</name>
            <label>Enable CDN</label>
            <helpText>Enable or disable CDN for static assets</helpText>
            <defaultValue>false</defaultValue>
        </input-field>

        <input-field type="text">
            <name>cdnApiKey</name>
            <label>CDN API Key</label>
            <helpText>API key for CDN service (if required)</helpText>
            <defaultValue></defaultValue>
        </input-field>

        <input-field type="text">
            <name>cdnSecretKey</name>
            <label>CDN Secret Key</label>
            <helpText>Secret key for CDN service (if required)</helpText>
            <defaultValue></defaultValue>
            <password>true</password>
        </input-field>
    </card>

</config>
