{% block advanced_wishlist_list %}
    <sw-page class="advanced-wishlist-list">
        {% block advanced_wishlist_list_search_bar %}
            <template #search-bar>
                <sw-search-bar
                    initial-search-type="advanced_wishlist"
                    :placeholder="$tc('advanced-wishlist-main.list.placeholderSearchBar')"
                    :initial-search="searchTerm"
                    @search="onSearch">
                </sw-search-bar>
            </template>
        {% endblock %}

        {% block advanced_wishlist_list_smart_bar_header %}
            <template #smart-bar-header>
                {% block advanced_wishlist_list_smart_bar_header_title %}
                    <h2>
                        {% block advanced_wishlist_list_smart_bar_header_title_text %}
                            {{ $tc('advanced-wishlist-main.list.textTitle') }}
                        {% endblock %}

                        {% block advanced_wishlist_list_smart_bar_header_amount %}
                            <span v-if="!isLoading" class="sw-page__smart-bar-amount">
                                ({{ total }})
                            </span>
                        {% endblock %}
                    </h2>
                {% endblock %}
            </template>
        {% endblock %}

        {% block advanced_wishlist_list_smart_bar_actions %}
            <template #smart-bar-actions>
                {% block advanced_wishlist_list_smart_bar_actions_add %}
                    <sw-button
                        :router-link="{ name: 'advanced.wishlist.main.create' }"
                        class="advanced-wishlist-list__add-wishlist-action"
                        variant="primary">
                        {{ $tc('advanced-wishlist-main.list.addWishlist') }}
                    </sw-button>
                {% endblock %}
            </template>
        {% endblock %}

        {% block advanced_wishlist_list_language_switch %}
            <template #language-switch>
                <sw-language-switch @on-change="onChangeLanguage"></sw-language-switch>
            </template>
        {% endblock %}

        <template #content>
            {% block advanced_wishlist_list_content %}
                <div class="advanced-wishlist-list__content">
                    {% block advanced_wishlist_list_filters %}
                        <sw-card class="advanced-wishlist-list__filters">
                            <sw-container columns="1fr 1fr 1fr 1fr" gap="16px">
                                <sw-select-field
                                    v-model="filterCriteria.type"
                                    :label="$tc('advanced-wishlist-main.list.filterType')"
                                    :placeholder="$tc('advanced-wishlist-main.list.filterTypePlaceholder')"
                                    @change="onFilterChanged">
                                    <option value="">{{ $tc('advanced-wishlist-main.list.filterTypeAll') }}</option>
                                    <option value="private">{{ $tc('advanced-wishlist-main.list.typePrivate') }}</option>
                                    <option value="public">{{ $tc('advanced-wishlist-main.list.typePublic') }}</option>
                                    <option value="shared">{{ $tc('advanced-wishlist-main.list.typeShared') }}</option>
                                </sw-select-field>

                                <sw-entity-single-select
                                    v-model="filterCriteria.customerId"
                                    entity="customer"
                                    :label="$tc('advanced-wishlist-main.list.filterCustomer')"
                                    :placeholder="$tc('advanced-wishlist-main.list.filterCustomerPlaceholder')"
                                    @change="onFilterChanged">
                                </sw-entity-single-select>

                                <sw-datepicker
                                    v-model="filterCriteria.dateFrom"
                                    :label="$tc('advanced-wishlist-main.list.filterDateFrom')"
                                    :placeholder="$tc('advanced-wishlist-main.list.filterDateFromPlaceholder')"
                                    @change="onFilterChanged">
                                </sw-datepicker>

                                <sw-datepicker
                                    v-model="filterCriteria.dateTo"
                                    :label="$tc('advanced-wishlist-main.list.filterDateTo')"
                                    :placeholder="$tc('advanced-wishlist-main.list.filterDateToPlaceholder')"
                                    @change="onFilterChanged">
                                </sw-datepicker>
                            </sw-container>
                        </sw-card>
                    {% endblock %}

                    {% block advanced_wishlist_list_toolbar %}
                        <div class="advanced-wishlist-list__toolbar">
                            <sw-container columns="auto 1fr auto" gap="16px" class="advanced-wishlist-list__toolbar-content">
                                {% block advanced_wishlist_list_bulk_actions %}
                                    <div class="advanced-wishlist-list__bulk-actions">
                                        <sw-button
                                            v-if="selectedWishlistsCount > 0"
                                            @click="showDeleteModal = true"
                                            :disabled="!canDelete"
                                            variant="danger"
                                            size="small">
                                            {{ $tc('advanced-wishlist-main.list.bulkDelete') }}
                                            ({{ selectedWishlistsCount }})
                                        </sw-button>
                                    </div>
                                {% endblock %}

                                <div></div>

                                {% block advanced_wishlist_list_export_actions %}
                                    <div class="advanced-wishlist-list__export-actions">
                                        <sw-button-group>
                                            <sw-button
                                                @click="onExport('csv')"
                                                :disabled="!canExport"
                                                size="small">
                                                {{ $tc('advanced-wishlist-main.list.exportCsv') }}
                                            </sw-button>
                                            <sw-button
                                                @click="onExport('excel')"
                                                :disabled="!canExport"
                                                size="small">
                                                {{ $tc('advanced-wishlist-main.list.exportExcel') }}
                                            </sw-button>
                                        </sw-button-group>
                                    </div>
                                {% endblock %}
                            </sw-container>
                        </div>
                    {% endblock %}

                    {% block advanced_wishlist_list_grid %}
                        <sw-data-grid
                            ref="dataGrid"
                            :data-source="wishlists"
                            :columns="wishlistColumns"
                            :full-page="false"
                            :show-settings="true"
                            :show-selection="true"
                            :is-loading="isLoading"
                            :allow-inline-edit="true"
                            :allow-column-edit="true"
                            identifier="advanced-wishlist-list"
                            class="advanced-wishlist-list__grid"
                            @column-sort="onSortColumn"
                            @page-change="onPageChange"
                            @selection-change="onSelectionChanged"
                            @inline-edit-save="onInlineEditSave"
                            @inline-edit-cancel="onInlineEditCancel">

                            {% block advanced_wishlist_list_grid_columns %}
                                {% block advanced_wishlist_list_grid_columns_customer %}
                                    <template #column-customer.firstName,customer.lastName="{ item }">
                                        <router-link
                                            v-if="item.customer"
                                            :to="{ name: 'sw.customer.detail', params: { id: item.customerId } }"
                                            class="advanced-wishlist-list__customer-link">
                                            {{ item.customerName }}
                                        </router-link>
                                        <span v-else class="advanced-wishlist-list__unknown-customer">
                                            {{ $tc('advanced-wishlist-main.list.unknownCustomer') }}
                                        </span>
                                    </template>
                                {% endblock %}

                                {% block advanced_wishlist_list_grid_columns_type %}
                                    <template #column-type="{ item }">
                                        <sw-label
                                            :variant="getVariantFromWishlistType(item.type)"
                                            class="advanced-wishlist-list__type-label">
                                            {{ getTypeLabel(item.type) }}
                                        </sw-label>
                                    </template>
                                {% endblock %}

                                {% block advanced_wishlist_list_grid_columns_item_count %}
                                    <template #column-itemCount="{ item }">
                                        <span class="advanced-wishlist-list__item-count">
                                            {{ item.itemCount }}
                                        </span>
                                    </template>
                                {% endblock %}

                                {% block advanced_wishlist_list_grid_columns_share_count %}
                                    <template #column-shareCount="{ item }">
                                        <span class="advanced-wishlist-list__share-count">
                                            {{ item.shareCount }}
                                        </span>
                                    </template>
                                {% endblock %}

                                {% block advanced_wishlist_list_grid_columns_created_at %}
                                    <template #column-createdAt="{ item }">
                                        {{ item.createdAt | date }}
                                    </template>
                                {% endblock %}

                                {% block advanced_wishlist_list_grid_columns_updated_at %}
                                    <template #column-updatedAt="{ item }">
                                        {{ item.updatedAt | date }}
                                    </template>
                                {% endblock %}

                                {% block advanced_wishlist_list_grid_columns_actions %}
                                    <template #actions="{ item }">
                                        {% block advanced_wishlist_list_grid_columns_actions_view %}
                                            <sw-context-menu-item
                                                class="advanced-wishlist-list__view-action"
                                                :router-link="{ name: 'advanced.wishlist.main.detail', params: { id: item.id } }">
                                                {{ $tc('advanced-wishlist-main.list.contextMenuView') }}
                                            </sw-context-menu-item>
                                        {% endblock %}

                                        {% block advanced_wishlist_list_grid_columns_actions_duplicate %}
                                            <sw-context-menu-item
                                                class="advanced-wishlist-list__duplicate-action"
                                                @click="onDuplicateWishlist(item)">
                                                {{ $tc('advanced-wishlist-main.list.contextMenuDuplicate') }}
                                            </sw-context-menu-item>
                                        {% endblock %}

                                        {% block advanced_wishlist_list_grid_columns_actions_delete %}
                                            <sw-context-menu-item
                                                class="advanced-wishlist-list__delete-action"
                                                variant="danger"
                                                @click="onDeleteWishlist(item.id)">
                                                {{ $tc('advanced-wishlist-main.list.contextMenuDelete') }}
                                            </sw-context-menu-item>
                                        {% endblock %}
                                    </template>
                                {% endblock %}
                            {% endblock %}

                            {% block advanced_wishlist_list_grid_pagination %}
                                <template #pagination>
                                    <sw-pagination
                                        :page="page"
                                        :limit="limit"
                                        :total="total"
                                        :auto-hide="false"
                                        @page-change="onPageChange">
                                    </sw-pagination>
                                </template>
                            {% endblock %}
                        </sw-data-grid>
                    {% endblock %}
                </div>
            {% endblock %}
        </template>

        {% block advanced_wishlist_list_sidebar %}
            <template #sidebar>
                <sw-sidebar>
                    {% block advanced_wishlist_list_sidebar_refresh %}
                        <sw-sidebar-item
                            icon="default-arrow-360-left"
                            :title="$tc('advanced-wishlist-main.list.titleSidebarItemRefresh')"
                            @click="onRefresh">
                        </sw-sidebar-item>
                    {% endblock %}
                </sw-sidebar>
            </template>
        {% endblock %}

        {% block advanced_wishlist_list_modals %}
            {% block advanced_wishlist_list_delete_modal %}
                <sw-modal
                    v-if="showDeleteModal"
                    class="advanced-wishlist-list__delete-modal"
                    :title="$tc('advanced-wishlist-main.list.modalTitleDelete')"
                    variant="small"
                    @modal-close="showDeleteModal = false">
                    {% block advanced_wishlist_list_delete_modal_content %}
                        <p class="advanced-wishlist-list__confirm-delete-text">
                            {{ $tc('advanced-wishlist-main.list.textDeleteConfirm', selectedWishlistsCount) }}
                        </p>
                    {% endblock %}

                    {% block advanced_wishlist_list_delete_modal_footer %}
                        <template #modal-footer>
                            <sw-button @click="showDeleteModal = false" size="small">
                                {{ $tc('advanced-wishlist-main.list.buttonCancel') }}
                            </sw-button>
                            <sw-button @click="onBulkDelete" variant="danger" size="small">
                                {{ $tc('advanced-wishlist-main.list.buttonDelete') }}
                            </sw-button>
                        </template>
                    {% endblock %}
                </sw-modal>
            {% endblock %}
        {% endblock %}
    </sw-page>
{% endblock %}